<div class="row">
	
		<div id="content">

			<br/><br/><br/>
			
			<div class="row">
				<div class="span6">
					<ul class="nav nav-list">
						<li><input type="text" id="company_name" class="h1_input" placeholder="Your Company Name" /></li>
						<li>Registration number: <input class="shorter" id="company_reg" type="text" placeholder="00000000000" /></li>
						<li class="hasVat">VAT number: <input class="shorter" id="company_vat"  type="text" placeholder="00000000000" /></li>
					</ul>
				</div>
				<div class="span3">
					<div class="date_section">
						<ul class="nav nav-list">
							<li class="nav-header nav-header-darker">Invoice Data</li>
							<li>Invoice number: <input id="invoice_number" class="shorter" type="text" placeholder="000000" /></li>
							<li>Date: <input class="shorter datepicker" id="invoice_date" type="text" data-date-format="dd/mm/yyyy" placeholder="21/04/2013"/></li>
						</ul>
					</div>
				</div>
			</div>

			<br/><br/>

			<div class="row">
				<ul class="nav nav-list span4">
					<li class="nav-header nav-header-darker">Invoice For</li>
					<li><input type="text" id="client_name" placeholder="Client Company Name"  /></li>
					<li><input type="text" id="client_address_1" placeholder="Address Line 1"  /></li>
					<li><input type="text" id="client_address_2" placeholder="Address Line 2"  /></li>
					<li><input type="text" id="client_town" placeholder="Town"  /></li>
					<li><input type="text" id="client_postcode" placeholder="Postcode"  /></li>
					<li><input type="text" id="client_country" placeholder="Country" /></li>
				</ul>
			</div>

			<br/><br/>

			<div class="row">
	
				<table id="fields" class="table table-condensed table-borderless" width="100%">
					<tr>
						<th width="40%">Description</th>
						<th class="right">Qty</th>
						<th class="right">Price</th>
						<th class="right">Amount</th>
						<th width="15%" class="right actions_column">Actions</th>
					</tr>
					
					<tr id="lastRow">
						<td><a id="addRow" class="navigable btn btn-small"/><i class="icon-plus"></i> Add Item</a></td>
						<td/><td><span class="hasVat">Subtotal</span></td>
						<td><input id="invoice_subtotal" type="text" class="navigable number hasVat"/></td>
					</tr>
					<tr>
						<td/><td/>
						<td><span class="hasVat">VAT <input id="invoice_vat_rate" class="navigable sensitive number" type="text" /></span></td>
						<td><input type="text" id="invoice_vat" class="navigable number hasVat" /></td>
					</tr>
					<tr>
						<td/><td/>
						<td>Total</td>
						<td><input type="text" id="invoice_total" class="navigable number"  /></td>
					</tr>
				</table>
				
			</div>

			<div class="row">
				<p class="nav-header nav-header-darker ">Additional Information</p>
				<textarea id="additional_information" height="50" class="textarea"></textarea>	
			</div>

			
		</div>
</div>